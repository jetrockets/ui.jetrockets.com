<div class="py-6">
  <div class="flex items-center justify-between px-16 pb-6">
    <h1 class="text-4xl italic text-gray-700">Task Manager</h1>
    <div class="flex gap-2.5">
      <%= render Ui::Btn::Component.new(size: :xl, rounded: true, class: "bg-white border-gray-400 px-4 py-2 h-9 hover:bg-gray-100").with_icon_content("images/safari/icons/search.svg") %>
      <%= render Ui::Btn::Component.new(size: :xl, rounded: true, class: "bg-white border-gray-400 px-4 py-2 h-9 hover:bg-gray-100").with_content("More").with_icon_content("images/safari/icons/chevron-bottom.svg") %>
      <%= render Ui::Dropdown::Component.new(data: { offsetDistance: 10 }) do |dropdown| %>
        <%= dropdown.with_trigger(class: "btn btn-primary btn-xl btn-iconed btn-rounded px-4 py-2 h-9") do %>
          <%= vite_svg_tag("images/safari/icons/plus.svg", alt: "plus") %>
          Create New
        <% end %>

        <%= dropdown.with_menu do |list| %>
          <%= list.with_element_item(data: { modal_target: "trigger", modal_toggle: "modal", action: "click->modal#show", id: "create_task" }) do %>
              Add Task Set to File
          <% end %>
          <%= list.with_element_item(data: { modal_target: "trigger", modal_toggle: "modal", action: "click->modal#show", id: "create_task" }) do %>
              Create One Off Task
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>

  <%= render Ui::Tabs::Component.new(class: "px-16 gap-6") do |tabs| %>
    <% tabs.with_item(title: "Due Today", href: "#", active: true) %>
    <% tabs.with_item(title: "Overdue", href: "#") %>
    <% tabs.with_item(title: "Due This Week", href: "#") %>
    <% tabs.with_item(title: "Upcoming", href: "#") %>
    <% tabs.with_item(title: "Completed", href: "#") %>
    <% tabs.with_item(title: "TBD", href: "#") %>
  <% end %>

  <%= render partial: "safari/shared/tabel" %>
  <%= render partial: "safari/shared/create_task" %>
</div>
