<%= container_tag do %>
  <h5 id="drawer-label" class="drawer__title"><%= @title %></h5>

  <% if helpers.respond_to?(:turbo_frame_request?) && helpers.turbo_frame_request? || !@async %>
   <button type="button" data-action="click->drawer#close click->turbo-drawer#close" aria-controls="drawer" aria-label="Close" class="drawer__close" data-id="<%= @id if @id.present? %>">
     <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
      <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6">
     </svg>
   </button>
  <% end %>

  <%= content %>
<% end %>
